<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.raydel.substantialsubs.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Range of Days"
        android:id="@+id/rangeBtn"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/div_textView"
        android:layout_centerHorizontal="true"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:id="@+id/monthBtn"
        android:layout_below="@+id/rangeBtn"
        android:layout_alignStart="@+id/rangeBtn"
        android:layout_alignEnd="@+id/rangeBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:id="@+id/yearBtn"
        android:layout_below="@+id/monthBtn"
        android:layout_alignStart="@+id/monthBtn"
        android:layout_alignEnd="@+id/monthBtn" />

    <FrameLayout
        android:id="@+id/fragment_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yearBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select one of the following options:"
        android:id="@+id/div_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
